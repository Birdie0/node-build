{
  "name": "node-build",
  "version": "3.1.0",
  "private": true,
  "description": "Install NodeJS versions",
  "homepage": "https://github.com/nodenv/node-build#readme",
  "license": "MIT",
  "author": "Sam Stephenson <sstephenson@gmail.com> (http://sstephenson.us)",
  "contributors": [
    "Will McKenzie <willmckenzie@oinutter.co.uk> (http://www.oinutter.co.uk)",
    "Jason Karns <jason@karns.name> (http://jason.karns.name)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nodenv/node-build.git"
  },
  "bugs": {
    "url": "https://github.com/nodenv/node-build/issues"
  },
  "directories": {
    "bin": "./bin",
    "test": "./test"
  },
  "scripts": {
    "test": "bats ${CI:+--tap} test",
    "verify-definitions": "scripty",
    "scrape-definitions": "nodenv update-version-defs --destination $PWD/share/node-build/",
    "submit-definitions": "scripty -r",
    "publish:brew": "brew-publish",
    "publish:github": "git push --follow-tags && script/release-github",
    "preversion": "scripty",
    "version": "scripty",
    "version:sync": "scripty",
    "postversion": "npm run publish:github && npm run publish:brew"
  },
  "devDependencies": {
    "bats": "^1.1.0",
    "bats-assert": "^1.0.1",
    "bats-mock": "^1.0.1",
    "brew-publish": "^2.3.1",
    "scripty": "^1.8.0"
  },
  "scripty": {
    "path": "./script",
    "silent": true
  }
}
